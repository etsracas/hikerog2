<header>

  <!-- ドロップダウンメニュー -->
  <ul id="dropdown1" class="dropdown-content">
    <% if user_signed_in? %>
        <li><%= link_to 'プロフィール編集', edit_user_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
    <% else %>
        <li><%= link_to 'ログイン', new_user_session_path %></li>
    <% end %>
    <li><%= link_to 'お問い合わせ', help_path %></li>
    <li class="divider"></li>
    <li><%= link_to 'トップ', root_path %></li>
  </ul>

  <nav>
    <div class="container nav-wrapper">
        <%= link_to 'hikerog', root_path, class: 'brand-logo' %>

        <ul class="right hide-on-med-and-down">
          <li><%= link_to 'やまログを探す', yamalogs_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'やまログを投稿', new_yamalog_path %></li>
          <% else %>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
          <% end %>

          <li><a class="dropdown-button" data-constrainwidth="false" href="#!" data-activates="dropdown1">Menu<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>

    </div>
  </nav>
</header>
