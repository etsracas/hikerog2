<% provide :title, "やまログを探す" %>

<div class="row">
  <div class="col s12">
    <div class="section">
      <h2>みんなのヤマログ一覧</h2>
      <p>みんなのヤマログを確認しよう。</p>
    </div>
  </div>
</div>

<div class="row">
  <%= form_tag yamalogs_path, :method => 'get', html: {:class => "col s12 center-align"} do %>
    <div class="row">
      <div class="col s12 m7 offset-m1">
        <%= text_field_tag :search, params[:search], placeholder: 'やまログを検索' %>
      </div>
      <div class="col s12 m3">
        <%= button_tag :yama_name => nil, class: 'btn waves-effect waves-light' do %>
          <i class="material-icons left">search</i>検索する
        <% end %>
      </div>
    </div>
  <% end %>
</div>

  <div class="list-group">
    <% @yamalogs.each do |yamalog| %>
        <div class="uk-width-medium-1-2 uk-width-large-1-3 top-hikerog">
          <div class="uk-panel uk-panel-box uk-panel-box-secondary">
            <%= link_to(yamalog) do %>
                <h3 class="uk-panel-title"><%= yamalog.yama_name %></h3>
            <% end %>
            <%= yamalog.yama_date %>
          </div>
        </div>
    <% end %>
  </div>
